{
  "title": "步骤条",
  "namespace": "mybricks.normal-pc.steps",
  "version": "1.0.0",
  "description": "步骤条",
  "author": "MyBricks",
  "author_name": "MyBricks",
  "icon": "./icon.svg",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editor",
  "inputs": [
    {
      "id": "nextStep",
      "title": "下一步",
      "schema": {
        "type": "follow"
      }
    },
    {
      "id": "prevStep",
      "title": "上一步",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "submit",
      "title": "数据提交",
      "rels": ["submit"],
      "schema": {
        "type": "follow"
      }
    },
    {
      "id": "reset",
      "title": "重置",
      "rels": ["reset"],
      "schema": {
        "type": "follow"
      }
    },
    {
      "id": "getIndex",
      "title": "获取当前步骤（从0开始）",
      "rels": ["getIndex"],
      "schema": {
        "type": "any"
      }
    }
  ],
  "outputs": [
    {
      "id": "submit",
      "title": "数据提交",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "reset",
      "title": "重置",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "step0",
      "title": "步骤0",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "getIndex",
      "title": "当前步骤",
      "schema": {
        "type": "number"
      }
    }
  ],
  "slots": [
    {
      "id": "step0",
      "title": "内容区【1】",
      "type": "scope",
      "inputs": [
        {
          "id": "step0_into",
          "title": "显示",
          "schema": {
            "type": "any"
          }
        },
        {
          "id": "step0_leave",
          "title": "隐藏",
          "schema": {
            "type": "any"
          }
        }
      ]
    }
  ]
}